{
    // Editors paramters
    ////////////////////
    "editor.rulers": [80],
    "editor.tabSize": 2,
    "editor.wordWrap": "off",
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.minimap.enabled": true,

    // files behavior
    /////////////////
    "files.exclude": {
        "*build*": true,
        "*devel*": true,
        "*.pyc":true,
    },
    "files.hotExit": "onExitAndWindowClose",

    // doxygen parameters
    "doxdocgen.generic.splitCasingSmartText": false,
    // Set the e-mail address of the author.  Replaces {email}.
    "doxdocgen.generic.authorEmail": "maximilien.naveau@gmail.com",
    // Set the name of the author.  Replaces {author}.
    "doxdocgen.generic.authorName": "Maximilien Naveau",
        
    // Git
    //////
    "git.ignoreLegacyWarning": true,

    // Shebang patterns
    "shebang.associations": [
      {"pattern": "^#!*/bin/bash$", "language": "shellscript"},
      {"pattern": "^#!*/usr/bin/env python$", "language": "python"},
    ],
    "files.associations": {
      "*.tex": "latex"
    },
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "C_Cpp.updateChannel": "Insiders",
    "terminal.integrated.rendererType": "dom",

    "configurations": [
      {
          "configurationProvider": "b2.catkin_tools",
          "intelliSenseMode": "${default}"
      }
    ],
    "catkin_tools.gtestMacroRegex": [
      "catkin_add_gtest",
      "test_*"
  ]
}
